<div class="body">
  <div class="cocktail-show-left-side">
    <div class="cocktail-show-first-container">
      <div class="cocktail-show-first-container-item">Accueil</div>
      <div class="cocktail-show-first-container-item">Cocktails</div>
      <div class="cocktail-show-first-container-cocktail-item"><%= @cocktail.name %></div>
    </div>
    <div class="cocktail-show-second-container">
      <div class="cocktail-show-second-container-main-elements">
        <div class="cocktail-show-title"><%= @cocktail.name %></div>
        <div class="cocktail-show-rating">5 stars</div>
        <div class="cocktail-show-photo"><%= image_tag(@cocktail.photo) %></div>
      </div>
      <div class="cocktail-show-second-container-doses"></div>
      <div class="cocktail-show-description">
        <div class="cocktail-show-instruction">
        </div>
      </div>
    </div>
  </div>
  <div class="cocktail-show-right-side">
    <div class="cocktail-show-third-container">
      <div class="cocktail-show-properties"></div>
      <div class="cocktail-show-liquor"></div>
      <div class="cocktail-show-ingredients"></div>
    </div>
  </div>
  <div class="cocktail-show-bottom-side">
    <div class="cocktail-show-fourth-container">
      <div class="cocktail-show-suggestions"></div>
    </div>
  </div>
</div>




