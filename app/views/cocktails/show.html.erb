<div class="body">
  <div class="container">
    <div class="cocktail-show-top-side">
      <div class="cocktail-show-top-side-item">
        <div class="cocktail-show-top-side-item one"><p><%= link_to "Home", cocktails_path %></p></div>
        <div class="cocktail-show-top-side-item two"><p><%= link_to "Cocktails", cocktails_path %></p></div>
        <div class="cocktail-show-top-side-item three"><p><%= link_to "#{@cocktail.name}", cocktail_path(@cocktail) %></p></div>
      </div>
    </div>
    <div class="cocktail-show-left-side">
      <div class="cocktail-show-left-side title photo">
        <div class="cocktail-show-left-side title"><h1><%= @cocktail.name %></div>
        <div class="cocktail-show-left-side photo"><%= image_tag(@cocktail.photo, style: "max-width: 573px; max-height: 573px") %></div>
      </div>
      <div class="cocktail-show-left-side doses">
        <div class="cocktail-show-left-side doses colored-area">
          <div class="cocktail-show-left-side doses title">INGREDIENTS</div>
          <!--
          <div class ="cocktail-show-left-side doses dropdown-menu">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Dropdown button
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item" href="#">1</a>
                  <a class="dropdown-item" href="#">2</a>
                  <a class="dropdown-item" href="#">3</a>
                </div>
            </button>
          </div>
          -->
          <div class="cocktail-show-left-side doses description">
            <% @cocktail.doses.each do |cocktail| %>
              <div class="cocktail-show-left-side doses description item">
                  <% if cocktail.description != nil %>
                    <%= cocktail.description %>
                  <% end %>
                <%= Ingredient.find_by_id(cocktail.ingredient_id).name %>
                <br>
              </div>
            <% end %>
          </div>
        </div>
        <div class="cocktail-show-left-side doses recipe">
          <div class="cocktail-show-left-side doses recipe title">
            <h2><i class="fas fa-cocktail"></i>  Recipe  </h2>
          </div>
          <%= @cocktail.description %>
        </div>
      </div>
    </div>
    <div class="cocktail-show-right-side">
      <div class="cocktail-show-right-side properties">
        <div class="cocktail-show-right-side properties item"><h6>Category:</h6> <p><b><%= @cocktail.category %></b></p></div>
        <div class="cocktail-show-right-side properties item"><h6>Capacity:</h6> <p><b><%= @cocktail.capacity %></p></b></div>
        <div class="cocktail-show-right-side properties item"><h6>Complexity:</h6> <p><b><%= @cocktail.complexity %></p></b></div>
      </div>
      <div class="cocktail-show-right-side alc-ing">
        <div class="cocktail-show-right-side alc-ing title"><h3><%= @cocktail.name %></h3></div>
        <div class="cocktail-show-right-side alc-ing image">
          <% if @cocktail.photo_alc.nil? == false %>
            <%= image_tag(@cocktail.photo_alc, size: "160x200") %>
          <% end %>
        </div>
      </div>
      <div class="cocktail-show-right-side non-alc-ing">
        <div class="cocktail-show-right-side non-alc-ing title"><h3>Other ingredients</h3></div>
        <% @cocktail.doses.each do |cocktail| %>
          <br>
            <% non_alc_ing = [] %>
            <% non_alc_ing << Ingredient.find_by_id(cocktail.ingredient_id) %>
            <% non_alc_ing.each do |x| %>
              <% if x.liquor == false %>
                <div class="cocktail-show-right-side non-alc-ing item">
                  <%= image_tag(x.photo, size: "80x100") %>
                </div>
              <% end %>
            <% end %>
          <br>
        <% end %>
      </div>  
    </div>
    <div class="cocktail-show-bottom-side">
      <div class="cocktail-show-bottom-side title">
      ------------------------------------------------------------ YOU MAY ALSO ENJOY ------------------------------------------------------------
      </div>
      <div class="cocktail-show-bottom-side-card">
        <div class="cocktail-show-bottom-side-card item">
          <% card_cocktail0 = Cocktail.order('RANDOM()')[0] %>
          <div class="cocktail-show-bottom-side-card img">
            <%= image_tag(card_cocktail0.photo, size: "200x200") %>
          </div>
          <div class="cocktail-show-bottom-side-card title">
            <h6><%= link_to "#{card_cocktail0.name}", cocktail_path(card_cocktail0) %></h6>
          </div>
        </div>
        <div class="cocktail-show-bottom-side-card item">
          <% card_cocktail1 = Cocktail.order('RANDOM()')[1] %>
          <div class="cocktail-show-bottom-side-card img">
            <%= image_tag(card_cocktail1.photo, size: "200x200") %>
          </div>
          <div class="cocktail-show-bottom-side-card title">
            <h6><%= link_to "#{card_cocktail1.name}", cocktail_path(card_cocktail1) %></h6>
          </div>
        </div>
        <div class="cocktail-show-bottom-side-card item">
          <% card_cocktail2 = Cocktail.order('RANDOM()')[2] %>
          <div class="cocktail-show-bottom-side-card img">
            <%= image_tag(card_cocktail2.photo, size: "200x200") %>
          </div>
          <div class="cocktail-show-bottom-side-card title">
            <h6><%= link_to "#{card_cocktail2.name}", cocktail_path(card_cocktail2) %></h6>
          </div>
        </div>
        <div class="cocktail-show-bottom-side-card item">
          <% card_cocktail3 = Cocktail.order('RANDOM()')[3] %>
          <div class="cocktail-show-bottom-side-card img">
            <%= image_tag(card_cocktail3.photo, size: "200x200") %>
          </div>
          <div class="cocktail-show-bottom-side-card title">
            <h6><%= link_to "#{card_cocktail3.name}", cocktail_path(card_cocktail3) %></h6>
          </div>
        </div>
      </div>
      <div class="cocktail-show-bottom-side previous next">
        <div class="cocktail-show-bottom-side previous"> 
          <% if @cocktail.previous %>
            <%= link_to "< Previous", @cocktail.previous %>
          <% end %>
        </div>
        <div class="cocktail-show-bottom-side next">
          <% if @cocktail.next %>
            <%= link_to "Next >", @cocktail.next %>
          <% end %>
        </div>
      </div>
    </div>
  </div>  
</div>


<%
=begin%>
<% @cocktail.doses.each do |cocktail| %>
    <% if cocktail.description != nil %>
      <span id="quantity"><%= cocktail.description.delete("^0-9").to_i %></span>
    <% end %>
    <% if cocktail.description != nil %>
      <span id="measure"><%= cocktail.description.tr("0-9", "") %></span>
    <% end %>
  <%= Ingredient.find_by_id(cocktail.ingredient_id).name %>
  <br>
<%
=end
%>
