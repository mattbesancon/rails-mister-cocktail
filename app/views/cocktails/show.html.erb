<div class="body">
  <div class="cocktail-show-left-side">
    <div class="cocktail-show-first-container">
      <div class="cocktail-show-first-container-item">Accueil</div>
      <div class="cocktail-show-first-container-item">Cocktails</div>
      <div class="cocktail-show-first-container-cocktail-item"><%= @cocktail.name %></div>
    </div>
    <div class="cocktail-show-second-container">
      <div class="cocktail-show-second-container-main-elements">
        <div class="cocktail-show-title"><h1><%= @cocktail.name %></div></h1>
        <div class="cocktail-show-rating">5 stars</div>
        <div class="cocktail-show-photo"><%= image_tag(@cocktail.photo, size: "400x500") %></div>
      </div>
      <div class="cocktail-show-second-container-doses">
        <div class="cocktail-show-second-container-doses-dropdown">
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Dropdown button
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <li><a class="dropdown-show-item 1" href="#">1</a></li>
              <li><a class="dropdown-show-item 2" href="#">2</a></li>
              <li><a class="dropdown-show-item 3" href="#">3</a></li>
            </div>
          </div>
        </div>
        <div class="cocktail-show-second-container-doses-quantity-ingredients">
          <% @cocktail.doses.each do |cocktail| %>
              <input type="textbox" id="result" class="form-control">
              <% if cocktail.description != nil %>
                <span id="quantity"><%= cocktail.description.delete("^0-9").to_i %></span>
              <% end %>
              <% if cocktail.description != nil %>
                <span id="measure"><%= cocktail.description.tr("0-9", "") %></span>
              <% end %>
            <%= Ingredient.find_by_id(cocktail.ingredient_id).name %>
            <br>
          <% end %>
        </div>
      </div>
      <div class="cocktail-show-description">
        <h2>Recipe</h2>
        <%= @cocktail.description %>
      </div>
    </div>
  </div>
  <div class="cocktail-show-right-side">
    <div class="cocktail-show-third-container">
      <div class="cocktail-show-properties">
        <p>Type: <%= @cocktail.category %></p>
        <p>Contenance: <%= @cocktail.capacity %></p>
        <p>Difficult√©: <%= @cocktail.complexity %></p>
      </div>
      <div class="cocktail-show-liquor">
        <img src="https://www.thecocktaildb.com/images/ingredients/tequila-Medium.png" alt="ingredient-image">
      </div>
      <div class="cocktail-show-ingredients"></div>
    </div>
  </div>
  <div class="cocktail-show-bottom-side">
    <div class="cocktail-show-fourth-container">
      <div class="cocktail-show-suggestions"></div>
    </div>
  </div>
  <div class="cocktail-show-previous-next">
    <div class="cocktail-show-previous"> 
      <% if @cocktail.previous %>
        <%= link_to "< Previous", @cocktail.previous %>
      <% end %>
    </div>
    <div class="cocktail-show-previous">
      <% if @cocktail.next %>
        <%= link_to "Next >", @cocktail.next %>
      <% end %>
    </div>
  </div>
</div>
